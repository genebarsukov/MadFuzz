{
   "compilerOptions": {
      "target": "es5",
      "module": "es2015",
      "moduleResolution": "node",
      "sourceMap": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "lib": [ "es2015", "dom" ],
      "noImplicitAny": true,
      "suppressImplicitAnyIndexErrors": true
   },
   "files": [
      "app/main.ts",
      "app/app.module.ts",
      "app/components/app/app.component.ts",
      "app/components/story-list/story-list.component.ts",
      "app/components/search-box/search-box.component.ts",
      "app/components/flower-petal/flower-petal.component.ts"
   ],

   "angularCompilerOptions": {
      "genDir": "aot",
      "skipMetadataEmit" : true
   }
}
